extends layout

append body
    .container
        .panel.panel-default
            .panel-heading
                h3.panel-title Login
            .panel-body
                if (message != "")
                    .alert.alert-danger(role="alert") #{message}
                form(method="post").form-horizontal
                    .form-group
                        label(for="username").control-label.col-sm-2 Username:
                        .col-sm-10
                            input(type="text" required="true" name="username").form-control#username
                    .form-group
                        label(for="password").control-label.col-sm-2 Password:
                        .col-sm-10
                            input(type="password" required="true" name="password").form-control#password
                    .text-center
                        button(type="submit").btn.btn-default Submit
